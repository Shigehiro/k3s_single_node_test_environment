apiVersion: v1
kind: ConfigMap
metadata:
  name: {{ docker_distribution_configmap_name }}
data:
    config.yml: |
      version: 0.1
      log:
        fields:
          service: registry
      storage:
        cache:
          blobdescriptor: inmemory
        filesystem:
          rootdirectory: {{ docker_registry_dir }}
      http:
        addr: :5000
        headers:
          X-Content-Type-Options: [nosniff]
      health:
        storagedriver:
          enabled: true
          interval: 10s
          threshold: 3
